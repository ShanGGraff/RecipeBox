@{
  Layout = "_Layout";
}

@using RecipeBox.Models;
@model List<RecipeBox.Models.Tag>;

<h1>Tags</h1>

@if (@Model.Count == 0)
{
  <h3>There are no tags!</h3>
} 

@foreach (Tag tag in Model)
{
  <li>@Html.ActionLink($"{tag.TagCategories}", "Details", new { id = tag.TagId })</li>
}

<p>@Html.ActionLink("Add new tag", "Create")</p>
<p>@Html.ActionLink("Back to home", "Index", "Home")</p>